<Window x:Class="TapeRecordWizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TapeRecordWizard"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, UpdateSourceTrigger=PropertyChanged}" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="_New playlist" Name="miNewPlaylist"  Click="miNewPlaylist_Click"/>
                <MenuItem Header="_Open playlist" Name="miOpenPlaylist" Click="miOpenPlaylist_Click" />
                <MenuItem Header="_Save playlist" Name="miSavePlaylist" Click="miSavePlaylist_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
